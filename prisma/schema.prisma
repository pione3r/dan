// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  username      String    @unique
  password      String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  feeds         Feed[]    @relation("author")
  comments      Comment[]
  likes         Feed[]    @relation("likes")
}

model Feed {
  id            String    @id @default(cuid())
  title         String
  content       String    @db.LongText
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  author        User      @relation(name: "author", fields: [authorId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  authorId      String  
  comments      Comment[]
  likedBy       User[]    @relation("likes")
}

model Comment {
  id            String    @id @default(cuid())
  content       String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  feed          Feed      @relation(fields: [feedId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  feedId        String
  author        User      @relation(fields: [authorId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  authorId      String  
}
